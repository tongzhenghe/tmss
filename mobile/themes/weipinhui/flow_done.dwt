                <!--{/if}--> 
                <!--{if $card.end_date}-->
                <li> <strong>{$lang.end_date}:</strong>{$card.end_date} </li>
                <!--{/if}-->
            </ul>
            <!--{/foreach}--> 
            <!--{/foreach}--> 
        </div>
